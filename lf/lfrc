# ========== General settings ==========
# set interpreter for shell commands
set shell bash
# have safer shell commands
set shellopts '-eu'
# set internal field separator (IFS) to "\n" for shell commands
set ifs "\n"

# ========== Visual ==========
# enable icons
set icons
# set column ratio
set ratios 1:1
# set the drawbox lines
set drawbox
# leave space top and bottom of the screen
set scrolloff 5
# directory update rate per second
set period 1
# Use the `dim` attribute instead of underline for the cursor in the preview pane
set cursorpreviewfmt "\033[7;2m"

# ========== Previewer settings ==========
# enable sixels
set sixel
# enable cptv preview
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

